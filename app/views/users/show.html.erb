<h1>マイページ</h1>


<!-- user表示させたい項目を記述する -->
<div class="mypage">
	<div>
		<%= attachment_image_tag @user, :profile_image, size:"60x60" %>

		<%= @user.name%>
		<%= @user.email %>
	</div>

	<br>

	<div class="edit">
		<!-- 自分だったら編集リンクを表示させる！ -->
		<% if @user == current_user %>
			<%= link_to "情報を編集する", edit_user_path(@user.id) %>
		<% end %>
	</div>
</div>