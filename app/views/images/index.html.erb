<h2>Library一覧</h2>

<div class="container">
  <div class="row">

		<!-- bootstrapでグリッド3 -->
		<div class="col-lg-3" style="background-color: orange;">
			<%= form_for(@image) do |f| %>

				<% if @image.errors.any? %>
					<%= @image.errors.count %>件のエラーが発生しました。
					<%= @image.errors.full_messages.each do |message| %>
						<%= message %>
					<% end %>
				<% end %>

				<div><%= f.attachment_field :image %></div><br>
				<div><%= f.text_field :title %></div><br>
				<div><%= f.text_area :body %>
						 <%= f.submit %>

			<% end %>
		</div>


		<!-- bootstrapでグリッド9 -->
		<!-- <div class="col-lg-8" style="background-color: silver;"> -->
			<div class="col-lg-8"></div>
				<% @images.each do |image| %>
					<p>title</p>
						<%= attachment_image_tag image, :image, size: "80x80" %>
					<span><%= link_to image.title, image_path(image.id) %></span>
				<% end %>
			</div>

	</div>
</div>
